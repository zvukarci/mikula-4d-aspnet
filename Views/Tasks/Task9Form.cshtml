@model a.Models.UserInfo
 
<head>
    <title>@ViewData["Title"] - a</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/task9.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/a.styles.css" asp-append-version="true" />
</head>
 
@{
    ViewData["Title"] = "Task 9 Form";
}

<div class="container mt-4">
    <h2>User Information Form</h2>
    <form method="post" asp-controller="Tasks" asp-action="Task9Form">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label for="surname" class="form-label">Surname</label>
            <input type="text" class="form-control" id="surname" name="surname" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>

        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" id="age" name="age" min="0" max="150" required>
        </div>

        <div class="mb-3">
            <label for="subjects" class="form-label">Subjects</label>
            <input type="text" class="form-control" id="subjectInput">
        </div>
        <button type="button" onclick="addSubject()" class="btn btn-secondary">Add Subject</button>

        <input type="hidden" id="subjectList" name="subjects"/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script>
    const subjectList = document.getElementById("subjectList");
    const subjectInput = document.getElementById("subjectInput");

    let subjects = [];
    function addSubject() {
        subjects.push(subjectList.value);
        subjectInput.value = "";
    }
</script>